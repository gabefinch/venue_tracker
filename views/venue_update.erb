<div class="row">
  <div class="col-sm-6">
    <form action="/venues/<%= @venue.id() %>" method="post" class="form-group">
      <input type="hidden" name="_method" value="patch">
      <label for="name">Venue Name</label>
      <input type="text" name="name" value="<%= @venue.name() %>" class="form-control">
      <br>
      <label for="address">Street Address</label>
      <input type="text" name="address" value="<%= @venue.address() %>" class="form-control">
      <br>
      <label for="rating">Rating (Currently Rated: <%= @venue.rating() %> stars)</label>
      <br>
      <select name="rating" value="<%= @venue.rating().to_i() %>" class="form-inline">
        <option> 0 </option>
        <option> 1 </option>
        <option> 2 </option>
        <option> 3 </option>
        <option> 4 </option>
        <option selected> 5 </option>
      </select>
      <br><br>
      <button type="submit" class="btn btn-success">Save Changes</button>
    </form>
    <form action="/venues/<%= @venue.id() %>" method="post">
      <input type="hidden" name="_method" value="delete">
      <button type="submit" class="btn btn-danger">Delete Venue</button>
    </form>
  </div>
  <div class="col-sm-6">
  </div>
</div>
<br>
<a href="/bands" class="btn btn-primary"><span class="glyphicon glyphicon-arrow-left">Back</span></a>
